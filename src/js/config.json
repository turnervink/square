          {
            "value": "0",
            "label": "Static bar"
          },
          {
            "value": "1",
            "label": "Battery level"
          },
          {
            "value": "2",
            "label": "Step goal progress"
          }
        ]
      },
      {
        "type": "toggle",
        "messageKey": "CfgKeyUseAutomaticStepGoal",
